@model DBClassLib.Puesto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    <div class="container">
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="container">
                                    @using (Html.BeginForm("AddNewCuestionario", "JefeArea", FormMethod.Post))
                                    {
                                    <h2 class="fw-bold mb-2 text-uppercase">Crear cuestionario</h2>
                                    <form>
                                            <input type="hidden" id="IdPuestoHidden" class="IdPuestoHidden" name="Descripcion" value="" />
                                        
                                        <div class="form-outline mb-4">
                                                <input type="text" name="Nombre" id="formInput1" class="form-control" style="text-align:center" />
                                                <label class="form-label" for="formInput1">Nombre</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                                @Html.DropDownListFor(model => model.IdPuesto, (SelectList)ViewBag.Puestos, "Selecciona un Puesto", htmlAttributes: new { @name="Descripcion", @class = "form-control" })
                                                <label class="form-label" for="formInput2">Puesto que lo solicita</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                                <input type="date" id="formInput3" name="FechaLimite" class="form-control" style="text-align:center" placeholder="@DateTime.Now.ToString("dd/MM/yyyy")" />

                                                <label class="form-label" for="formInput3">Fecha limite</label>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-block mb-4">Enviar</button>
                                    </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    @section Scripts{
        <script type="text/javascript">
            $("select").change(function () {
                var selectedOption = $(this).children("option:selected").text();
                alert("Selected option is: " + selectedOption);
                $('#IdPuestoHidden').val(selectedOption);

            });

        </script>
    }

}
